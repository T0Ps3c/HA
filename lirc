LIRC /etc/lirc/lircd.conf.d/TV.lircd.conf
begin remote
  name  TV
  bits           21
  flags RC6|CONST_LENGTH
  eps            30
  aeps          100
  header       2633   926
  one           411   474
  zero          411   474
  gap          106227
  min_repeat      1
  toggle_bit_mask 0x10000
  rc6_mask    0x10000
  frequency    38000
      begin codes
          KEY_POWER                0x0EFFF3
          KEY_HOME                 0x0EFFAB
          KEY_UP                   0x0EFFA7
          KEY_DOWN                 0x0EFFA6
          KEY_LEFT                 0x0EFFA5
          KEY_RIGHT                0x0EFFA4
          KEY_OK                   0x0EFFA3
          KEY_BACK                 0x0EFFF5
          KEY_MENU                 0x0EFF6F
          KEY_VOLUMEUP             0x0EFFEF
          KEY_VOLUMEDOWN           0x0EFFEE
          KEY_MUTE                 0x0EFFF2
      end codes
end remote
